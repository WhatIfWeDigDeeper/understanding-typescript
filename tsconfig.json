{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es7"],
    "outDir": ".",
    "rootDir": ".",
    "strict": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "src/**/*.spec.ts"
  ]
}
